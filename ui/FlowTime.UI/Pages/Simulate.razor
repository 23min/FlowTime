@page "/simulate"
@using MudBlazor

<PageTitle>Simulate (FlowTime-Sim)</PageTitle>

<MudGrid>
    <!-- Header Section -->
    <MudItem xs="12">
        <MudPaper Class="pa-6" Elevation="3">
            <MudText Typo="Typo.h3" GutterBottom="true">
                <MudIcon Icon="@Icons.Material.Filled.ShowChart" Class="mr-3" Size="Size.Large" />
                FlowTime-Sim Simulation
            </MudText>
            <MudText Typo="Typo.h6" Class="mb-4" Color="Color.Secondary">
                Use FlowTime-Sim for probabilistic simulation and stochastic modeling with statistical analysis.
            </MudText>
        </MudPaper>
    </MudItem>

    <!-- About FlowTime-Sim and Simulation Tools -->
    <MudItem xs="12">
        <MudGrid>
            <MudItem xs="12" md="8">
                <MudPaper Class="pa-4" Elevation="3" Style="height: 100%;">
                    <MudText Typo="Typo.h5" GutterBottom="true">
                        <MudIcon Icon="@Icons.Material.Filled.ScatterPlot" Class="mr-2" />
                        About FlowTime-Sim
                    </MudText>
                    <MudText Typo="Typo.body1" Class="mb-2">
                        FlowTime-Sim provides probabilistic, distribution-based modeling for flow simulation:
                    </MudText>
                    <MudText Typo="Typo.body2" Class="mb-3" Style="opacity: 0.8;">
                        FlowTime-Sim works together with FlowTime Engine by creating synthetic models and telemetry data. 
                        Use it when real system catalogs and telemetry don't exist, or for creating what-if scenarios and stress tests.
                    </MudText>
                    
                    <MudList T="string" Dense="true" Class="mb-3">
                        <MudListItem T="string" Icon="@Icons.Material.Filled.AutoGraph">
                            <strong>Synthetic</strong> — Generates flows without needing real telemetry
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.BarChart">
                            <strong>Distribution-Driven</strong> — Shapes arrivals, retries, and delays with PMFs
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Sync">
                            <strong>Compatible</strong> — Produces the same artifacts/contracts as FlowTime Engine
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Repeat">
                            <strong>Repeatable</strong> — Deterministic results when using the same random seed
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Explore">
                            <strong>Exploratory</strong> — Safe sandbox for testing scenarios and stress cases
                        </MudListItem>
                    </MudList>

                </MudPaper>
            </MudItem>
            
            <MudItem xs="12" md="4">
                <MudPaper Class="pa-4" Elevation="3" Style="height: 100%;">
                    <MudText Typo="Typo.h5" GutterBottom="true">
                        <MudIcon Icon="@Icons.Material.Filled.Build" Class="mr-2" />
                        Simulation Tools
                    </MudText>
                    <MudText Typo="Typo.body1" Class="mb-4">
                        Choose the right tool for your simulation needs:
                    </MudText>
                    
                    <MudCard Class="pa-4" Elevation="1">
                        <MudCardContent>
                            <div class="d-flex align-center mb-3">
                                <MudIcon Icon="@Icons.Material.Filled.PlayArrow" Color="Color.Secondary" Size="Size.Medium" Class="mr-2" />
                                <MudText Typo="Typo.h6">
                                    <MudButton Href="/sim/templates" Variant="Variant.Text" Color="Color.Secondary" Class="pa-0">
                                        Template Studio
                                    </MudButton>
                                </MudText>
                            </div>
                            <MudText Typo="Typo.body2">
                                Configure and run parameterized simulation templates without writing YAML.
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudItem>
    
    <MudItem xs="12">
        <MudPaper Class="pa-4" Elevation="3">
            <MudText Typo="Typo.h5" GutterBottom="true">
                <MudIcon Icon="@Icons.Material.Filled.Settings" Class="mr-2" />
                Template-Based Workflow
            </MudText>
            <MudText Typo="Typo.body2" Class="mb-3">
                FlowTime-Sim uses a template-based approach to make complex simulations accessible:
            </MudText>
            
            <MudTimeline TimelineOrientation="TimelineOrientation.Horizontal" TimelinePosition="TimelinePosition.Top">
                <MudTimelineItem>
                    <ItemContent>
                        <MudCard Elevation="1">
                            <MudCardContent Class="text-center">
                                <MudIcon Icon="@Icons.Material.Filled.Apps" Size="Size.Large" Color="Color.Secondary" />
                                <MudText Typo="Typo.subtitle1">Select Template</MudText>
                                <MudText Typo="Typo.body2">Choose from domain-specific templates</MudText>
                            </MudCardContent>
                        </MudCard>
                    </ItemContent>
                </MudTimelineItem>
                <MudTimelineItem>
                    <ItemContent>
                        <MudCard Elevation="1">
                            <MudCardContent Class="text-center">
                                <MudIcon Icon="@Icons.Material.Filled.Tune" Size="Size.Large" Color="Color.Secondary" />
                                <MudText Typo="Typo.subtitle1">Configure Parameters</MudText>
                                <MudText Typo="Typo.body2">Set simulation parameters via forms</MudText>
                            </MudCardContent>
                        </MudCard>
                    </ItemContent>
                </MudTimelineItem>
                <MudTimelineItem>
                    <ItemContent>
                        <MudCard Elevation="1">
                            <MudCardContent Class="text-center">
                                <MudIcon Icon="@Icons.Material.Filled.Storage" Size="Size.Large" Color="Color.Secondary" />
                                <MudText Typo="Typo.subtitle1">Choose System</MudText>
                                <MudText Typo="Typo.body2">Select system catalog to simulate</MudText>
                            </MudCardContent>
                        </MudCard>
                    </ItemContent>
                </MudTimelineItem>
                <MudTimelineItem>
                    <ItemContent>
                        <MudCard Elevation="1">
                            <MudCardContent Class="text-center">
                                <MudIcon Icon="@Icons.Material.Filled.PlayCircle" Size="Size.Large" Color="Color.Success" />
                                <MudText Typo="Typo.subtitle1">Run Simulation</MudText>
                                <MudText Typo="Typo.body2">Execute and analyze results with the FlowTime Engine</MudText>
                            </MudCardContent>
                        </MudCard>
                    </ItemContent>
                </MudTimelineItem>
            </MudTimeline>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12">
        <MudPaper Class="pa-4" Elevation="3">
            <MudText Typo="Typo.h5" GutterBottom="true">
                <MudIcon Icon="@Icons.Material.Filled.Category" Class="mr-2" />
                Template Categories
            </MudText>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudCard Elevation="1">
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="mb-2">
                                <MudIcon Icon="@Icons.Material.Filled.School" Class="mr-2" />
                                Theoretical Templates
                            </MudText>
                            <MudText Typo="Typo.body2">
                                Educational templates for learning queueing theory, stochastic processes, and simulation concepts.
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudCard Elevation="1">
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="mb-2">
                                <MudIcon Icon="@Icons.Material.Filled.Business" Class="mr-2" />
                                Domain Templates
                            </MudText>
                            <MudText Typo="Typo.body2">
                                Real-world templates for IT systems, manufacturing, transportation, and other business domains.
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudItem>
</MudGrid>

