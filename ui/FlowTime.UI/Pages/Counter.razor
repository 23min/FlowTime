@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Counter</MudText>
<MudPaper Class="pa-4" Elevation="1">
    <MudText>Current count: <strong>@currentCount</strong></MudText>
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="IncrementCount"
        StartIcon="@Icons.Material.Filled.Add">Increment</MudButton>
</MudPaper>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
