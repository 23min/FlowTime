@page "/"

<PageTitle>Home - FlowTime</PageTitle>

<MudGrid>
    <!-- Welcome Header -->
    <MudItem xs="12">
        <MudPaper Class="pa-6" Elevation="2">
            <div class="text-center">
                <MudText Typo="Typo.h3" GutterBottom="true">
                    <MudIcon Icon="@Icons.Material.Filled.Timeline" Class="mr-3" Size="Size.Large" />
                    Welcome to FlowTime
                </MudText>
                <MudText Typo="Typo.h6" Class="mb-4" Color="Color.Secondary">
                    FlowTime is a digital twin platform that helps you understand how complex systems behave over time.
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-3">
                    Use it to replay real data for answers and insights, or to simulate possible futures and explore "what-if" scenarios.
                </MudText>
            </div>
        </MudPaper>
    </MudItem>
    
    <!-- Two Main Approaches -->
    <MudItem xs="12">
        <MudGrid>
            <!-- Analyze Panel -->
            <MudItem xs="12" md="6">
                <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Icon="@Icons.Material.Filled.Analytics" Style="height: 100%;">
                    <div class="d-flex align-center mb-3">
                        <MudText Typo="Typo.h5" Color="Color.Info">Analyze</MudText>
                    </div>
                    <MudText Typo="Typo.body2" Class="mb-3">
                        Deterministic, telemetry-driven, "digital twin" analysis
                    </MudText>
                    
                    <MudList T="string" Dense="true" Class="mb-3">
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Timeline">
                            Replay real telemetry (what is/was)
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Speed">
                            Study capacity & throughput limits
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Layers">
                            Run what-if overlays (outages, SLA)
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Assessment">
                            Get reproducible KPIs & charts
                        </MudListItem>
                    </MudList>
                    
                    <MudText Typo="Typo.body2">
                        <strong>Choose Analyze when you want deterministic answers from real data.</strong>
                    </MudText>
                    
                    <MudAlert Severity="Severity.Normal" Variant="Variant.Text" Dense="true" NoIcon="true" Class="mt-3">
                        <div class="d-flex align-center">
                            <MudIcon Icon="@Icons.Material.Filled.Lightbulb" Class="mr-2" Size="Size.Small" />
                            <MudText Typo="Typo.body2">
                                Don't have real data? Generate synthetic data with Simulation Studio.
                            </MudText>
                        </div>
                    </MudAlert>
                </MudAlert>
            </MudItem>
            
            <!-- Simulate Panel -->
            <MudItem xs="12" md="6">
                <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined" Icon="@Icons.Material.Filled.ShowChart" Style="height: 100%;">
                    <div class="d-flex align-center mb-3">
                        <MudText Typo="Typo.h5" Color="Color.Warning">Simulate</MudText>
                    </div>
                    <MudText Typo="Typo.body2" Class="mb-3">
                        Probabilistic, distribution-driven, "what if" simulation
                    </MudText>
                    
                    <MudList T="string" Dense="true" Class="mb-3">
                        <MudListItem T="string" Icon="@Icons.Material.Filled.AutoGraph">
                            Generate synthetic data
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.ScatterPlot">
                            Model uncertainty & variability
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.TrendingUp">
                            Explore stress-test scenarios
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.School">
                            Teach & demo without real data
                        </MudListItem>
                    </MudList>
                    
                    <MudText Typo="Typo.body2">
                        <strong>Choose Simulate when you want to explore possibilities & risks.</strong>
                    </MudText>
                </MudAlert>
            </MudItem>
        </MudGrid>
    </MudItem>
    
    <!-- Learning Resources -->
    <MudItem xs="12">
        <MudPaper Class="pa-4" Elevation="1">
            <div class="text-center">
                <MudText Typo="Typo.body1" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-2" />
                    Not sure which approach fits your needs?
                </MudText>
                <MudButton Href="/learn" 
                          Variant="Variant.Outlined" 
                          Color="Color.Tertiary" 
                          StartIcon="@Icons.Material.Filled.School"
                          Size="Size.Large">
                    Explore Learning Resources
                </MudButton>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>
