@page "/tools"
@using MudBlazor

<PageTitle>Tools</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">FlowTime Tools</MudText>
<MudText Typo="Typo.body1" Class="mb-4">
    Utilities and tools for monitoring, debugging, and managing your FlowTime environment.
</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudPaper Class="pa-4" Elevation="2">
            <MudText Typo="Typo.h5" GutterBottom="true">
                <MudIcon Icon="@Icons.Material.Filled.Build" Class="mr-2" />
                Available Tools
            </MudText>
            
            <MudCard Class="mb-3" Elevation="1">
                <MudCardContent>
                    <div class="d-flex align-center mb-2">
                        <MudIcon Icon="@Icons.Material.Filled.HealthAndSafety" Class="mr-2" />
                        <MudButton Href="/health" Variant="Variant.Text" Color="Color.Default">
                            System Health
                        </MudButton>
                    </div>
                    <MudText Typo="Typo.body2">
                        Monitor the health status of FlowTime Engine and FlowTime-Sim APIs with real-time status indicators.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12" md="6">
        <MudPaper Class="pa-4" Elevation="2">
            <MudText Typo="Typo.h5" GutterBottom="true">
                <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-2" />
                System Information
            </MudText>
            <MudList T="string">
                <MudListItem T="string" Icon="@Icons.Material.Filled.Api">
                    <div>
                        <MudText Typo="Typo.subtitle2">FlowTime Engine API</MudText>
                        <MudText Typo="Typo.body2">Deterministic flow analysis and modeling</MudText>
                    </div>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Casino">
                    <div>
                        <MudText Typo="Typo.subtitle2">FlowTime-Sim API</MudText>
                        <MudText Typo="Typo.body2">Stochastic simulation and Monte Carlo analysis</MudText>
                    </div>
                </MudListItem>
            </MudList>
        </MudPaper>
    </MudItem>
</MudGrid>

