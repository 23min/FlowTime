{
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet build",
      "group": "build"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "dotnet test --nologo",
      "group": "test"
    },
    {
      "label": ".NET Build (sim)",
      "type": "shell",
      "command": "dotnet build src/FlowTime.Sim.Cli && dotnet build tests/FlowTime.Sim.Tests",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": ".NET Test (sim)",
      "type": "shell",
      "command": "dotnet test tests/FlowTime.Sim.Tests",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run SIM-M0 example",
      "type": "shell",
      "command": "dotnet run --project src/FlowTime.Sim.Cli -- --model examples/m0.const.yaml --flowtime http://localhost:8080 --out out/m0.csv --format csv",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run SIM-M0 example (container API)",
      "type": "shell",
      "command": "dotnet run --project src/FlowTime.Sim.Cli -- --model examples/m0.const.yaml --flowtime http://flowtime-api:8080 --out out/m0.csv --format csv",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "start: flowtime-sim-api",
      "type": "shell",
      "command": "dotnet run --project src/FlowTime.Sim.Service",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "ASPNETCORE_URLS": "http://0.0.0.0:8090"
        }
      },
      "group": "none",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\s*info: Microsoft.Hosting.Lifetime",
            "endsPattern": "^\\s*info: Microsoft.Hosting.Lifetime.* Application started\\."
          }
        }
      ]
    }
  ]
}