{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "kill:8080",
      "type": "shell",
      "command": "bash -lc 'lsof -ti:8080 | xargs -r kill -9; true'",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "prelaunch: api",
      "type": "shell",
      "command": "bash -lc 'echo prelaunch api'",
      "dependsOn": [
        "kill:8080",
        "build"
      ],
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet build",
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "dotnet test --nologo",
      "group": "test",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "run: hello",
      "type": "shell",
      "command": "dotnet run --project src/FlowTime.Cli -- run examples/hello/model.yaml --out out/hello --verbose",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "start: api",
      "type": "shell",
      "command": "dotnet run --project apis/FlowTime.API --urls http://localhost:8080",
      "group": "none",
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
