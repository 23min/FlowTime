{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://flowtime.dev/schemas/catalog.v1.json",
  "title": "FlowTime Catalog v1",
  "description": "Domain-neutral system catalog defining components, connections, and layout hints for simulation and UI diagram rendering",
  "type": "object",
  "required": ["version", "metadata", "components", "classes"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version (must be 1 for v1)"
    },
    "metadata": {
      "type": "object",
      "required": ["id", "title"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_.-]+$",
          "minLength": 1,
          "description": "Unique catalog identifier"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable catalog title"
        },
        "description": {
          "type": "string",
          "description": "Optional catalog description"
        }
      },
      "additionalProperties": false
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "label"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_.-]+$",
            "minLength": 1,
            "description": "Component identifier (must match Gold component_id exactly)"
          },
          "label": {
            "type": "string",
            "minLength": 1,
            "description": "Human-readable component label"
          },
          "description": {
            "type": "string",
            "description": "Optional component description"
          }
        },
        "additionalProperties": false
      },
      "description": "List of system components"
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_.-]+$",
            "minLength": 1,
            "description": "Source component ID"
          },
          "to": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_.-]+$",
            "minLength": 1,
            "description": "Target component ID"
          },
          "label": {
            "type": "string",
            "description": "Optional connection label"
          }
        },
        "additionalProperties": false
      },
      "description": "List of directed connections between components"
    },
    "classes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "List of entity classes (must include DEFAULT)"
    },
    "layoutHints": {
      "type": "object",
      "properties": {
        "rankDir": {
          "type": "string",
          "enum": ["LR", "RL", "TB", "BT"],
          "description": "Layout direction (Left-Right, Right-Left, Top-Bottom, Bottom-Top)"
        },
        "spacing": {
          "type": "integer",
          "minimum": 0,
          "description": "Node spacing in layout units"
        }
      },
      "additionalProperties": false,
      "description": "Optional hints for diagram layout engines (elk, react-flow)"
    }
  },
  "additionalProperties": false
}
