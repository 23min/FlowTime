<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <VersionPrefix>0.5.0</VersionPrefix>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.12.0" />
    <PackageReference Include="xunit" Version="2.9.2" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.8.2" />
    <PackageReference Include="YamlDotNet" Version="16.1.3" />
  </ItemGroup>
  <!-- Exclude legacy nested folder moved from ui/ to avoid duplicate assembly attributes from its obj/bin -->
  <ItemGroup>
    <Compile Remove="FlowTime.UI.Tests/**" />
    <EmbeddedResource Remove="FlowTime.UI.Tests/**" />
    <None Remove="FlowTime.UI.Tests/**" />
  </ItemGroup>
  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\src\FlowTime.UI\FlowTime.UI.csproj" />
  </ItemGroup>
</Project>
