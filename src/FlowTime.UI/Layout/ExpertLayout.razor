@inherits LayoutComponentBase
@using MudBlazor
@using FlowTime.UI.Configuration
@using FlowTime.UI.Services
@implements IDisposable
@inject FlowTime.UI.Services.ThemeService Theme
@inject FlowTime.UI.Services.PreferencesService Prefs
@inject FlowTime.UI.Services.FeatureFlagService Flags
@inject IHttpClientFactory HttpClientFactory

<MudThemeProvider Theme="@Theme.CurrentTheme" IsDarkMode="@Theme.IsDark" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="@GetAppBarColor()" Class="appbar-surface" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6">FlowTime</MudText>
        <MudSpacer />
        
        <!-- Learning Mode and Theme Controls -->
        <MudTooltip Text="Need help getting started?">
            <MudButton Variant="Variant.Text" 
                      StartIcon="@Icons.Material.Filled.School"
                      Href="/learn"
                      Color="Color.Inherit"
                      Size="Size.Small">
                Learning Mode
            </MudButton>
        </MudTooltip>
        <MudIconButton Icon="@(Theme.IsDark? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
            Color="Color.Inherit" OnClick="ToggleDarkAsync" />
        
        <MudTooltip Text="View on GitHub">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" 
                          Color="Color.Inherit" 
                          Href="https://github.com/23min/flowtime"
                          Target="_blank" />
        </MudTooltip>
    </MudAppBar>

    <MudDrawer @bind-Open="drawerOpen" 
               ClipMode="DrawerClipMode.Always" 
               Elevation="2"
               Variant="DrawerVariant.Mini"
               OpenMiniOnHover="true"
               Width="280px"
               Class="drawer-surface">
        <MudNavMenu>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">Home</MudNavLink>
            
            <div class="drawer-section">
                <div class="drawer-section-title">Time Travel</div>
                <MudNavLink Href="/time-travel/run" Icon="@Icons.Material.Filled.PlayArrow" Class="drawer-nav-link">
                    Run Model
                </MudNavLink>
                <MudNavLink Href="/time-travel/artifacts" Icon="@Icons.Material.Filled.Archive" Class="drawer-nav-link">
                    Artifacts
                </MudNavLink>
                <MudNavLink Href="/time-travel/dashboard" Icon="@Icons.Material.Filled.Dashboard" Class="drawer-nav-link">
                    Dashboard
                </MudNavLink>
                <MudNavLink Href="/time-travel/topology" Icon="@Icons.Material.Filled.AccountTree" Class="drawer-nav-link">
                    Topology
                </MudNavLink>
            </div>

            <div class="drawer-section">
                <div class="drawer-section-title">Simulate</div>
                <MudNavLink Href="/templates" Icon="@Icons.Material.Filled.DesignServices" Class="drawer-nav-link">
                    Template Studio
                </MudNavLink>
            </div>

            <div class="drawer-section">
                <div class="drawer-section-title">Tools</div>
                <MudNavLink Href="/health" Icon="@Icons.Material.Filled.HealthAndSafety" Class="drawer-nav-link">
                    System Health
                </MudNavLink>
                <MudNavLink Href="/features" Icon="@Icons.Material.Filled.AccountTree" Class="drawer-nav-link">
                    Features
                </MudNavLink>
                <MudNavLink Href="/api-demo" Icon="@Icons.Material.Filled.Api" Class="drawer-nav-link">
                    API Testing
                </MudNavLink>
            </div>

            <div class="drawer-section">
                <div class="drawer-section-title">Learn</div>
                <MudNavLink Href="/learn" Icon="@Icons.Material.Filled.MenuBook" Class="drawer-nav-link">
                    Learning Mode
                </MudNavLink>
            </div>
        </MudNavMenu>

        <div class="drawer-status-footer">
            <FlowTime.UI.Components.StatusBar.ExpertStatusBar
                @ref="statusBar"
                Compact="true"
                UseDemoMode="@useDemoMode"
                OnDemoModeChanged="@OnDemoModeChanged"
                FlowTimeApiColor="@GetApiStatusColor(flowTimeApiStatus)"
                FlowTimeSimApiColor="@GetApiStatusColor(flowTimeSimApiStatus)" />
        </div>
    </MudDrawer>

    <MudMainContent Class="expert-main-content">
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-4 main-container">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool drawerOpen = true;
    private bool useDemoMode;
    
    // API Status tracking
    public enum ApiStatus { Unknown, Healthy, Unhealthy }
    private ApiStatus flowTimeApiStatus = ApiStatus.Unknown;
    private ApiStatus flowTimeSimApiStatus = ApiStatus.Unknown;
    
    // Status bar reference
    private FlowTime.UI.Components.StatusBar.ExpertStatusBar? statusBar;
    
    void ToggleDrawer() => drawerOpen = !drawerOpen;
    [Inject] IJSRuntime JS { get; set; } = default!;
    [Inject] IConfiguration Configuration { get; set; } = default!;
    [Inject] INotificationService NotificationService { get; set; } = default!;
    async Task ToggleDarkAsync()
    {
        await Theme.EnsureLoadedAsync();
        await Theme.ToggleAsync();
        StateHasChanged();
    }
    protected override async Task OnInitializedAsync()
    {
        await Task.WhenAll(Flags.EnsureLoadedAsync(), Theme.EnsureLoadedAsync(), Prefs.EnsureLoadedAsync());
        useDemoMode = Flags.UseDemoMode;
        Flags.Changed += OnFlagsChanged;
        
        // Register this layout with the notification service
        if (NotificationService is NotificationService notificationService)
        {
            notificationService.RegisterLayout(this);
        }
        
        // Start periodic health checks
        _ = Task.Run(PeriodicHealthCheck);
    }
    private async void OnFlagsChanged()
    {
        useDemoMode = Flags.UseDemoMode;
        await InvokeAsync(StateHasChanged);
    }
    private async Task OnDemoModeChanged(bool value)
    {
        await Flags.SetDemoModeAsync(value);
    }
    
    private Color GetAppBarColor()
    {
        return Theme.IsDark ? Color.Default : Color.Info;
    }
    
    private Color GetApiStatusColor(ApiStatus status)
    {
        return status switch
        {
            ApiStatus.Healthy => Color.Success,
            ApiStatus.Unhealthy => Color.Error,
            _ => Color.Default
        };
    }
    
    private async Task PeriodicHealthCheck()
    {
        while (true)
        {
            try
            {
                // Simple health check - could be enhanced to use actual API clients
                using var httpClient = HttpClientFactory.CreateClient("General");
                httpClient.Timeout = TimeSpan.FromSeconds(5);
                
                // Get configuration for API URLs
                var flowTimeApiConfig = Configuration.GetSection(FlowTimeApiOptions.SectionName).Get<FlowTimeApiOptions>() 
                    ?? new FlowTimeApiOptions();
                var flowTimeSimApiConfig = Configuration.GetSection(FlowTimeSimApiOptions.SectionName).Get<FlowTimeSimApiOptions>() 
                    ?? new FlowTimeSimApiOptions();
                
                // Check FlowTime API using configured URL
                try
                {
                    var apiHealthUrl = $"{flowTimeApiConfig.BaseUrl.TrimEnd('/')}/{flowTimeApiConfig.ApiVersion}/healthz";
                    var response = await httpClient.GetAsync(apiHealthUrl);
                    flowTimeApiStatus = response.IsSuccessStatusCode ? ApiStatus.Healthy : ApiStatus.Unhealthy;
                }
                catch
                {
                    flowTimeApiStatus = ApiStatus.Unhealthy;
                }
                
                // Check FlowTime-Sim API using configured URL
                try
                {
                    var simApiHealthUrl = $"{flowTimeSimApiConfig.BaseUrl.TrimEnd('/')}/{flowTimeSimApiConfig.ApiVersion}/healthz";
                    var response = await httpClient.GetAsync(simApiHealthUrl);
                    flowTimeSimApiStatus = response.IsSuccessStatusCode ? ApiStatus.Healthy : ApiStatus.Unhealthy;
                }
                catch
                {
                    flowTimeSimApiStatus = ApiStatus.Unhealthy;
                }
                
                await InvokeAsync(StateHasChanged);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Health check error: {ex.Message}");
            }
            
            // Check every 30 seconds
            await Task.Delay(30000);
        }
    }
    
    // Method to add notifications to status bar
    public void AddNotification(string message, FlowTime.UI.Components.StatusBar.ExpertStatusBar.NotificationSeverity severity = FlowTime.UI.Components.StatusBar.ExpertStatusBar.NotificationSeverity.Info)
    {
        statusBar?.AddNotification(message, severity);
    }
    
    public void Dispose() => Flags.Changed -= OnFlagsChanged;
}
