    private MetricChartViewModel? BuildMetricChart(NodeSparklineData sparkline, string title, string primaryKey, bool isPercent, ChartType chartType)
    {
        var slice = ResolveMetricSeriesSlice(sparkline, primaryKey);
        IReadOnlyList<double?>? values;
        var startIndex = sparkline.StartIndex;

        if (slice is not null && slice.Values.Count > 0)
        {
            values = slice.Values;
            startIndex = slice.StartIndex;
        }
        else
        {
            values = primaryKey switch
            {
                "successRate" => sparkline.Values,
                "utilization" => sparkline.Utilization,
                "errorRate" => sparkline.ErrorRate,
                "queue" => sparkline.QueueDepth,
                _ => null
            };
        }

        if (values is null || values.Count == 0)
        {
            return null;
        }

        var data = new double[values.Count];
        var hasValue = false;
        var lastValue = 0d;
        var lastSet = false;

        for (var i = 0; i < values.Count; i++)
        {
            var sample = values[i];
            if (sample.HasValue && double.IsFinite(sample.Value))
            {
                var numeric = isPercent ? sample.Value * 100d : sample.Value;
                data[i] = numeric;
                hasValue = true;
                lastValue = numeric;
                lastSet = true;
            }
            else
            {
                data[i] = double.NaN;
            }
        }

        if (!hasValue)
        {
            return null;
        }

        for (var i = 0; i < data.Length; i++)
        {
            if (double.IsNaN(data[i]))
            {
                data[i] = lastSet ? lastValue : 0d;
            }
            else
            {
                lastValue = data[i];
                lastSet = true;
            }
        }

        var labels = new string[data.Length];
        for (var i = 0; i < data.Length; i++)
        {
            labels[i] = (startIndex + i).ToString(CultureInfo.InvariantCulture);
        }

        var seriesName = string.Empty;
        var series = new[]
        {
            new ChartSeries
            {
                Name = seriesName,
                Data = data
            }
        };

        return new MetricChartViewModel(title, series, labels, chartType);
    }

    private static SparklineSeriesSlice? ResolveMetricSeriesSlice(NodeSparklineData sparkline, string primaryKey)
    {
        if (sparkline.Series.TryGetValue(primaryKey, out var slice))
        {
            return slice;
        }

        return primaryKey switch
        {
            "queue" when sparkline.Series.TryGetValue("queueDepth", out var queueSlice) => queueSlice,
            _ => null
        };
    }

    private (ChartSeries[] Series, string[] Labels)? BuildPmfChart(string nodeId)
    {
        if (string.IsNullOrWhiteSpace(nodeId) || topologyGraph is null)
        {
            return null;
        }

        var node = topologyGraph.Nodes.FirstOrDefault(n => string.Equals(n.Id, nodeId, StringComparison.OrdinalIgnoreCase));
        var distribution = node?.Semantics?.Distribution;
        if (distribution is null || distribution.Values.Count == 0 || distribution.Probabilities.Count == 0)
        {
            return null;
        }

        var length = Math.Min(distribution.Values.Count, distribution.Probabilities.Count);
        if (length == 0)
        {
            return null;
        }

        var labels = new string[length];
        var data = new double[length];
        var hasValue = false;

        for (var i = 0; i < length; i++)
        {
            var probability = distribution.Probabilities[i];
            if (!double.IsFinite(probability) || probability < 0)
            {
                data[i] = 0d;
            }
            else
            {
                data[i] = probability;
                if (probability > 0)
                {
                    hasValue = true;
                }
            }

            labels[i] = distribution.Values[i].ToString("0.###", CultureInfo.InvariantCulture);
        }

        if (!hasValue)
        {
            return null;
        }

        var series = new[]
        {
            new ChartSeries
            {
                Name = string.Empty,
                Data = data
            }
        };

        return (series, labels);
    }

