{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://flowtime.dev/schemas/template.schema.json",
  "title": "FlowTime Template",
  "type": "object",
  "required": ["metadata", "grid", "nodes", "outputs"],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "minimum": 1
    },
    "metadata": {
      "type": "object",
      "required": ["id", "title"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "parameters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
          },
          "type": {
            "type": "string",
            "enum": ["integer", "number", "boolean", "string", "array"]
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "default": {},
          "min": {
            "type": "number"
          },
          "max": {
            "type": "number"
          },
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": true
          },
          "required": {
            "type": "boolean"
          }
        },
        "additionalProperties": true
      }
    },
    "grid": {
      "type": "object",
      "required": ["bins", "binSize", "binUnit"],
      "properties": {
        "bins": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 1
            },
            {
              "type": "string"
            }
          ]
        },
        "binSize": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 1
            },
            {
              "type": "string"
            }
          ]
        },
        "binUnit": {
          "type": "string",
          "enum": ["minutes", "hours", "days"]
        },
        "start": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": true
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "kind"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "kind": {
            "type": "string",
            "enum": ["const", "pmf", "expr"]
          },
          "group": {
            "type": "string"
          },
          "values": {
            "anyOf": [
              {
                "type": "number"
              },
              {
                "type": "array",
                "items": {
                  "type": "number"
                }
              },
              {
                "type": "string"
              }
            ]
          },
          "pmf": {
            "type": "object",
            "required": ["values", "probabilities"],
            "properties": {
              "values": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              },
              "probabilities": {
                "type": "array",
                "items": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            },
            "additionalProperties": false
          },
          "expr": {
            "type": "string"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "source": {
            "type": "string"
          },
          "telemetry": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["series"],
        "properties": {
          "series": {
            "type": "string",
            "minLength": 1
          },
          "as": {
            "type": "string"
          },
          "filename": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "mode": {
      "type": "string",
      "enum": ["simulation", "telemetry"]
    },
    "provenance": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string"
        },
        "source": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
